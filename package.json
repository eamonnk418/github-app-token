{
  "name": "github-app-token",
  "version": "0.0.0",
  "private": true,
  "description": "Load balancing across multiple GitHub Apps to optimize API rate limits.",
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "homepage": "https://github.com/eamonnk418/github-app-token",
  "bugs": {
    "url": "https://github.com/eamonnk418/github-app-token/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eamonnk418/github-app-token.git"
  },
  "license": "BSD-3-Clause",
  "author": "eamonnk418",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package",
    "bundle": "npm run format:write && npm run package",
    "ci-test": "npx jest",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:check": "npx prettier --check .",
    "format:write": "npx prettier --write .",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "package": "npx ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "npx jest"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "verbose": true
  },
  "dependencies": {
    "@actions/core": "^1.10.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^5.0.1",
    "eslint-plugin-jest": "^28.8.0",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.3.3",
    "prettier-eslint": "^16.3.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.5.4"
  },
  "packageManager": "pnpm@9.8.0+sha512.8e4c3550fb500e808dbc30bb0ce4dd1eb614e30b1c55245f211591ec2cdf9c611cabd34e1364b42f564bd54b3945ed0f49d61d1bbf2ec9bd74b866fcdc723276",
  "engines": {
    "node": ">=20"
  }
}
